<div class="container">
  <div class="jumbotron text-center">
    <h1 class="display-4">Eat-Da-Burger!</h1>
    <img src="assets/img/burger.jpg" height="200px" width="200px">
    <hr class="my-4">
    <h2>Add a new Burger!</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="newBurger">Enter a burger you want to eat! Click the "Submit" button.</label>
        <input type="text" class="form-control" id="newburger" placeholder="Enter Name of Burger">
      </div>
      <button type="submit" class="btn btn-primary" id="addBurger">Submit</button>
    </form>
  </div>

  <div class="row mb-5">
    <div class="col">
      <ul>
        <h2>Burgers to eat!</h2>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <p>
            {{this.burger_name}}

            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}">>Devour It!</button>
          </p>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <ul>
        <h2>Burgers Devoured!</h2>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          <p>
            {{this.burger_name}}
          </p>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>